{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@seba/shared": ["libs/shared/src/index.ts"],
      "@seba/frontend/api-services": [
        "libs/frontend/api-services/src/index.ts"
      ],
      "@seba/backend/auth": ["libs/backend/auth/src/index.ts"],
      "@seba/frontend/context": ["libs/frontend/context/src/index.ts"],
      "@seba/backend/controllers": ["libs/backend/controllers/src/index.ts"],
      "@seba/frontend/home": ["libs/frontend/home/src/index.ts"],
      "@seba/frontend/login": ["libs/frontend/login/src/index.ts"],
      "@seba/frontend/navigation": ["libs/frontend/navigation/src/index.ts"],
      "@seba/backend/models": ["libs/backend/models/src/index.ts"],
      "@seba/frontend/lecture/create": [
        "libs/frontend/lecture/create/src/index.ts"
      ],
      "@seba/frontend/lecture/create-unit": [
        "libs/frontend/lecture/create-unit/src/index.ts"
      ],
      "@seba/frontend/lecture/quizzes": [
        "libs/frontend/lecture/quizzes/src/index.ts"
      ],
      "@seba/frontend/lecture/questions": [
        "libs/frontend/lecture/questions/src/index.ts"
      ],
      "@seba/frontend/lecture/statistics": [
        "libs/frontend/lecture/statistics/src/index.ts"
      ],
      "@seba/frontend/lecture/watch": [
        "libs/frontend/lecture/watch/src/index.ts"
      ],
      "@seba/backend/services": ["libs/backend/services/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
